<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicalRehabilitation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_theme_button_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_theme_background</item>
        <item name="android:background">@color/white_theme_background</item>
        <item name="android:textColor">@color/white_theme_text</item>
        <item name="android:datePickerStyle">@color/white_theme_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash screen here -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/icon</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!-- Запрет диалоговому окну исчезать при нажатии за его пределы -->
    <style name="MyStyleDialog" parent="@style/Base.Theme.AppCompat.Dialog">
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
</resources>